{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "node",
        "checkJs": true,
		"lib": ["DOM", "ES2022"],
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["**/*.mjs", "**/*.mts", "**/*.ts"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
}